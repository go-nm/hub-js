{
  "collectCoverage": true,
  "coverageReporters": ["lcov", "clover"],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "reporters": ["default", "jest-simple-summary"],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx"
  ],
  "testURL": "http://localhost",
  "testRegex": "/src/.*(\\.spec)\\.tsx?$",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  }
}
